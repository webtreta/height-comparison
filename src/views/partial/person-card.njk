<div class="person-card bg-white rounded-lg shadow-md p-4 text-center">
  <div class="avatar-container relative mx-auto" style="height: {{ person.height * 0.5 }}px;">
    <img
      src="{{ person.avatar }}"
      alt="{{ person.name }}"
      class="absolute bottom-0 left-1/2 transform -translate-x-1/2"
      style="height: {{ person.height * 0.5 }}px; max-height: 100%;"
    >
  </div>

  <div class="mt-4">
    <h3 class="text-lg font-semibold">{{ person.name }}</h3>
    <p class="text-gray-600">{{ person.height }} cm ({{ person.heightInFeetInches }})</p>
  </div>

  <form action="/remove-person/{{ person.id }}" method="POST" class="mt-3">
    <button type="submit" class="text-sm text-red-500 hover:text-red-700">Remove</button>
  </form>
</div>
